@import '~stylus/colors'

#create-panel
    position fixed
    z-index 3000
    display flex
    flex-direction column
    justify-content space-between
    align-items flex-start
    width 280px
    height 100vh
    padding 58px 24px 16px 24px
    background-color transparent
    outline none
    cursor default

#create-panel-list
    width 100%
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start

    & > .tab
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        width 100%
        height 54px
        margin 8px 0
        padding 16px 32px
        background-color transparent
        color aside-detail
        text-decoration none
        cursor pointer
        border-radius 116px
        outline none
        transition box-shadow .2s ease-out

        &:hover,
        &:focus
            background-color aside-interact
            box-shadow  0 3px 7px rgba(0,0,0, .025),
                        0 10px 25px rgba(0,0,0, .015)

        &.active
            background-color primary-root
            box-shadow  0 3px 7px rgba(255,153,204, .5),
                        0 10px 25px rgba(255,153,204, .425)

            & > .detail
                color text-on-primary

            & > .material-icons
                color text-on-primary

        & > .detail
            font-size 18px
            margin 0
            color aside-detail
            display flex
            flex-direction row
            justify-content flex-start
            align-items center

        & > .material-icons
            margin-right 10px
            font-size 21px

#profile-tab.tab
    width 100%
    height 54px
    padding 0 8px 0 8px

    & > .detail
        display block
        width auto
        margin 0
        overflow hidden
        white-space nowrap
        word-break keep-all
        text-overflow ellipsis

#profile-image
    display inline-block
    width 40px
    height 40px
    margin-right .5em
    border-radius 24px
    object-fit cover
    object-position center

@media screen and (max-width: 1365.9px)
    #create-panel
        width 86px
        padding-left 16px
        padding-right 16px

    #create-panel-list, #create-panel-profile
        & > .tab
            padding 8px
            width 54px
            height 54px
            justify-content center

            & > .detail
                display none

            & > .material-icons
                margin-right 0
                font-size 24px

    #profile-image
        width 46px
        height 46px
        margin-right 0