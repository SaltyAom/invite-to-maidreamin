@import '~stylus/colors'

#loading-indicator-wrapper
  position: relative
  margin: 0 auto
  width: 100px
  height: 100vh
  animation: loading-indicator-appear .5s ease-in-out 1

#loading-indicator-wrapper:before
  content: ''
  display: block
  padding-top: 100%

#loading-indicator
  -webkit-animation: loading-indicator-rotate 2s linear infinite
  -webkit-transform-origin: center center
  animation: loading-indicator-rotate 2s linear infinite
  transform-origin: center center
  width: 100%
  height: 100%
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

#loading
  stroke-dasharray: 1, 200
  stroke-dashoffset: 0
  -webkit-animation: loading-indicator-dash 1.5s ease-in-out infinite
  animation: loading-indicator-dash 1.5s ease-in-out infinite
  stroke-linecap: round
  stroke: primary-1

@keyframes loading-indicator-appear
  0%
    opacity: 0

  85%
    opacity: 0

  100%
    opacity: 1

@-webkit-keyframes loading-indicator-rotate
  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
  
@keyframes loading-indicator-rotate
  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)

@-webkit-keyframes loading-indicator-dash
  0%
    stroke-dasharray: 1, 200
    stroke-dashoffset: 0

  50%
    stroke-dasharray: 89, 200
    stroke-dashoffset: -35px

  100%
    stroke-dasharray: 89, 200
    stroke-dashoffset: -124px

@keyframes loading-indicator-dash
  0%
    stroke-dasharray: 1, 200
    stroke-dashoffset: 0

  50%
    stroke-dasharray: 89, 200
    stroke-dashoffset: -35px

  100%
    stroke-dasharray: 89, 200
    stroke-dashoffset: -124px